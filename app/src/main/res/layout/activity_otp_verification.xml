<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_otp_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Confirmation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/dialogTitle"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/otp"
                android:layout_margin="25dp"
                android:hint="OTP Here"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textSize="18sp"
                android:id="@+id/verify_otp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                />
        </LinearLayout>



        <app.com.myprogressbar.otpview.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/common_padding"
            android:textColor="@color/text_colors"
            android:textSize="18sp"
            app:cursorColor="@color/line_selected"
            app:cursorWidth="2dp"
            app:lineColor="@color/line_selected"
            app:lineWidth="2dp"
            app:viewType="rectangle" />
        <!--
        app:itemHeight="50dp"
        app:itemRadius="1dp"
        app:itemCount="4"
        app:itemSpacing="10dp"
        app:itemWidth="50dp"
        -->
        <app.com.myprogressbar.customsplash.ParticleView
            android:id="@+id/prVw_particle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:background="@android:color/holo_red_dark"
            pv:pv_background_color="#2E2E2E"
            pv:pv_host_text="github"
            pv:pv_host_text_size="50sp"
            pv:pv_particle_text=".com"
            pv:pv_particle_text_size="24sp"
            pv:pv_text_color="#FFF"
            pv:pv_text_anim_time="3000"
            pv:pv_spread_anim_time="2000"
            pv:pv_host_text_anim_time="3000"/>
        <app.com.myprogressbar.justification_txt_edit_txt.JustifiedTextView
            android:id="@+id/tv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_normal_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="normal_mode" />

        <Button
            android:id="@+id/btn_recycler_view_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recycler_view_mode" />
</LinearLayout>
</ScrollView>