<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/spinner_11"></item>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/spinner_0"></item>
    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/spinner_11"></item>
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/spinner_0"></item>
    <!-- Pressed -->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/spinner_11"></item>
    <item android:state_pressed="true" android:drawable="@drawable/spinner_0"></item>
</selector>