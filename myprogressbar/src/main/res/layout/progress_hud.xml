<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/progress_hud_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">
        <app.com.myprogressbar.customization.spinnerloader.SpinnerLoading
            android:id="@+id/spinner_loading"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    <ImageView
        android:id="@+id/spinnerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <app.com.myprogressbar.myBall.MyBallCradleLoading
        android:id="@+id/myBallCradleLoading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>
    <app.com.myprogressbar.rotate.RotateLoading
        android:id="@+id/rotateLoading"
        android:layout_width="@dimen/_65dp"
        android:layout_height="@dimen/_65dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <app.com.myprogressbar.multiIndicators.IndicatorView
        android:id="@+id/myIndicator_vw"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <app.com.myprogressbar.vy.VYLoader
        android:id="@+id/vy_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:textSize="@dimen/_15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Please Wait . . ."
        android:paddingLeft="@dimen/_10dp"/>

</LinearLayout>
